<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="4dp"
              android:paddingBottom="8dp"
              xmlns:app="http://schemas.android.com/apk/res-auto"
    
    android:alpha="1.0">
    
    <com.cloudstechnologies.android.giftapp.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:padding="12dp"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="0dp"
        
        android:src="@drawable/empty_gifts_th"/>
    <FrameLayout
        android:paddingTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    
            <TextView
                android:id="@+id/textView_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="12345678901234567890123"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:singleLine="true"/>
    
            <TextView
                android:id="@+id/textView_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
        
                android:text="Цена: 5500 руб."
                android:textColor="@android:color/black"
                android:textStyle="normal"/>
            
            <TextView
                android:id="@+id/textView_date_gifting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
        
                android:text="Вручить: 15.05.2018"
                android:textColor="@android:color/black"
                android:textStyle="normal"/>
    
        </LinearLayout>
        <TextView
            android:id="@+id/textView_ready"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_gravity="right"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
        
            android:text="Куплено"
            android:textColor="@android:color/black"
            android:textStyle="normal"
            
            android:visibility="gone"/>
        
    </FrameLayout>
    
</LinearLayout>
